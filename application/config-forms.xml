<?xml version="1.0"?>
<configdata>
  <production>
    <contact>
      <action>/contact</action>
      <method>post</method>
      <id>contactForm</id>
      <name>contactForm</name>
      <elements>
        <comment>
          <type>Textarea</type>
          <options>
            <required>true</required>
            <rows>4</rows>
            <cols>30</cols>
            <filters>
              <striptags>
                <filter>StripTags</filter>
              </striptags>
            </filters>
            <validators>
              <strlen>
                <validator>StringLength</validator>
                <options>
                  <min>1</min>
                  <max>1000</max>
                </options>
              </strlen>
            </validators>
          </options>
        </comment>
        <name>
          <type>Text</type>
          <options>
            <label>Name</label>
            <required>true</required>
            <size>30</size>
            <maxlength>100</maxlength>
            <filters>
              <striptags>
                <filter>StripTags</filter>
              </striptags>
            </filters>
            <validators>
              <strlen>
                <validator>StringLength</validator>
                <options>
                  <min>1</min>
                  <max>100</max>
                </options>
              </strlen>
            </validators>
          </options>
        </name>
        <email>
          <type>Text</type>
          <options>
            <label>Email</label>
            <required>true</required>
            <size>30</size>
            <maxlength>100</maxlength>
            <filters>
              <striptags>
                <filter>StripTags</filter>
              </striptags>
              <lower>
                <filter>StringToLower</filter>
              </lower>
            </filters>
            <validators>
              <emailaddress>
                <validator>EmailAddress</validator>
              </emailaddress>
              <strlen>
                <validator>StringLength</validator>
                <options>
                  <min>5</min>
                  <max>100</max>
                </options>
              </strlen>
            </validators>
          </options>
        </email>
        <url>
          <type>Text</type>
          <options>
            <label>URL</label>
            <size>30</size>
            <maxlength>255</maxlength>
            <filters>
              <striptags>
                <filter>StripTags</filter>
              </striptags>
            </filters>
            <validators>
              <regex>
                <validator>Regex</validator>
                <options>
                  <pattern>'^http://(.+)?\.(.+)$'</pattern>
                </options>
              </regex>
              <strlen>
                <validator>StringLength</validator>
                <options>
                  <min>10</min>
                  <max>255</max>
                </options>
              </strlen>
            </validators>
          </options>
        </url>
        <submit>
          <type>Submit</type>
          <options>
            <label>Send Message</label>
          </options>
        </submit>
      </elements>
    </contact>
  </production>
  <staging extends="production">
  </staging>
</configdata>
